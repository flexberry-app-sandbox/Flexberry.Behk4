<h3 class="ui header">{{t "forms.i-i-s-destkijj-sad-контрагенты-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодКонтиагента
      class=(if (v-get validationModel "кодКонтиагента" "isInvalid") "error")
      label=(t "forms.i-i-s-destkijj-sad-контрагенты-e.кодКонтиагента-caption")
      data-test-i-i-s-destkijj-sad-контрагенты-e-кодКонтиагента=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодКонтиагента" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-destkijj-sad-контрагенты-e.наименование-caption")
      data-test-i-i-s-destkijj-sad-контрагенты-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field" data-test-i-i-s-destkijj-sad-контрагенты-e-вид="true">
    <label>{{t "forms.i-i-s-destkijj-sad-контрагенты-e.вид-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-destkijj-sad-виды")
      value=model.вид
      class=(if (v-get validationModel "вид" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "вид" "message")}}
  </div>
</form>
